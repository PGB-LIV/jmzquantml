                                <groupId>org.jboss.apiviz</groupId>
                                <artifactId>apiviz</artifactId>
                                <version>1.3.2.GA</version>
                            </docletArtifact>
                            -->
                            <useStandardDocletOptions>true</useStandardDocletOptions>             
                            <doctitle>
                        <![CDATA[<p align="left"><b>${project.name}, ${project.version}<br>API Specification</b></p>]]>
                            </doctitle>
                            <encoding>UTF-8</encoding>
                            <header>
                        <![CDATA[<p align="center"><b>${project.name} <br>${project.version}</b></p>]]>
                            </header>      
                            <reportOutputDirectory>src\docs</reportOutputDirectory>
                            <destDir>api</destDir>             
                            <!--<javadocExecutable>C:\Program Files\Java\jdk1.7.0\bin\javadoc.exe</javadocExecutable> -->                  
                            <nosince>true</nosince>
                            <!--<overview>src\overview.html</overview>-->
                            <tags>
                                <tag>
                                    <name>institute</name>
                                    <placement>X</placement>    
                                </tag>
                                <tag>
                                    <name>time</name>
                                    <placement>X</placement>
                                </tag>
                            </tags>                    
                        </configuration>
                        <executions>
                            <execution>
                                <id>attach-javadocs</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>                                
                    </plugin>
                    <!-- gpg signing -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.6</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>                   
            </build>
        </profile>       
